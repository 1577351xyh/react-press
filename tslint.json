{
    "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js",
            "src/packages/utils/svg.js"
        ]
    },
    "rules": {
        "no-console": [
            false
        ],
        "only-arrow-functions": [
            false
        ],
        "ordered-imports": [
            false
        ],
        "object-literal-sort-keys": [false],
        "jsx-no-lambda": [false]
    }
}